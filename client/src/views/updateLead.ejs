<%- include('partials/header') %>
<h1 class="title">Update Lead</h1>
<form action="/leads/update/<%= lead.id %>" method="POST">
    <div class="field">
        <label class="label">Name</label>
        <div class="control">
            <input class="input" type="text" name="name" value="<%= lead.name %>" required>
        </div>
    </div>
    <div class="field">
        <label class="label">Email</label>
        <div class="control">
            <input class="input" type="email" name="email" value="<%= lead.email %>" required>
        </div>
    </div>
    <div class="field">
        <label class="label">Phone</label>
        <div class="control">
            <input class="input" type="text" name="phone" value="<%= lead.phone %>">
        </div>
    </div>
    <div class="field">
        <label class="label">Company</label>
        <div class="control">
            <input class="input" type="text" name="company" value="<%= lead.company %>" required>
        </div>
    </div>
    <div class="field">
        <label class="label">Status</label>
        <div class="control">
            <div class="select">
                <select name="status">
                    <option value="open" <%= lead.status === 'open' ? 'selected' : '' %>>Open</option>
                    <option value="won" <%= lead.status === 'won' ? 'selected' : '' %>>Won</option>
                    <option value="lost" <%= lead.status === 'lost' ? 'selected' : '' %>>Lost</option>
                </select>
            </div>
        </div>
    </div>
    <div class="control">
        <button class="button is-primary" type="submit">Update Lead</button>
    </div>
</form>
<%- include('partials/footer') %>
